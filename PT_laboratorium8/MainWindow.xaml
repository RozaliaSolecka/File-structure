<Window x:Class="PT_laboratorium8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PT_laboratorium8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar VerticalAlignment="Top" >
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click="Open"/>
                    <MenuItem Header="_Exit" Click="Exit"/>
                </MenuItem>
            </Menu>
        </ToolBar>
        <TreeView Name="treeView" Margin="0,30,400,0"/>
        <StatusBar Margin="0,393,0.333,-0.333">
            <TextBlock Name="DOS"></TextBlock>
        </StatusBar>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="400,30,0,28">
            <TextBlock Name ="textBlockforContent" TextWrapping="Wrap" Width="368" ></TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
